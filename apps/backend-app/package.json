{
  "name": "backend-app",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "node dist/index.js",
    "firebase-deploy": "firebase deploy --only functions --debug",
    "firebase:start": "firebase emulators:start --only functions,auth",
    "dev-express": "tsup --watch --onSuccess \"node dist/index.cjs\"",
    "dev": "firebase emulators:start --only functions,auth",
    "build": "tsup",
    "check-types": "tsc --noEmit",
    "lint": "eslint / --max-warnings 0",
    "test": "jest --detectOpenHandles"
  },
  "jest": {
    "preset": "@repo/jest-presets/node"
  },
  "dependencies": {
    "@repo/logger": "workspace:*",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "firebase": "^11.4.0",
    "firebase-admin": "^13.2.0",
    "firebase-functions": "^6.3.2",
    "http-status-codes": "^2.3.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-presets": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "4.17.17",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.9",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.22.0",
    "firebase-functions-test": "^3.4.1",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "supertest": "^7.0.0",
    "tsup": "^8.4.0",
    "typescript": "5.8.2"
  }
